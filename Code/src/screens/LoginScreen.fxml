<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="screens.LoginScreenController"
      prefHeight="400.0" prefWidth="500.0" spacing="30">
    <padding>
        <Insets top="50" left="40" right="40" bottom="50"></Insets>
    </padding>
    <HBox spacing="70">
        <Text text="Авторизация"> <font>
            <Font name="Verdana Bold" size="28"></Font>
        </font></Text>
        <ImageView
                fx:id="imageView"
                fitWidth="150"
                fitHeight="120">

        </ImageView>
    </HBox>
    <VBox spacing="8">
        <HBox spacing="50">
        <Label text="Логин: " minWidth="100">
            <font>
                <Font name="Verdana Bold" size="16"></Font>
            </font>
        </Label>
        <TextField fx:id="loginTextField" >
            <font>
                <Font name="Verdana Bold" size="16"></Font>
            </font>
        </TextField>
    </HBox>
        <HBox spacing="50">
            <Label text="Пароль: " minWidth="100">
                <font>
                    <Font name="Verdana Bold" size="16"></Font>
                </font>
            </Label>
            <TextField fx:id="passwordTextField">
                <font>
                    <Font name="Verdana Bold" size="16"></Font>
                </font>
            </TextField>
        </HBox></VBox>

    <HBox spacing="10">
        <padding>
            <Insets left="15"></Insets>
        </padding>
        <Button text="Регистрация" minWidth="120" onAction="#onRegistrationButtonClicked">
            <font>
                <Font name="Verdana Bold" size="13"></Font>
            </font>
        </Button>
        <Button fx:id="applyButton" text="Подтвердить" onAction="#onApplyButtonClicked" minWidth="150" style="-fx-background-color: #388f33">
            <font>
                <Font name="Verdana Bold" size="13"></Font>
            </font>
        </Button>
        <Button text="Отмена" minWidth="80" style="-fx-background-color: #cc3b3b" onAction="#onCancelButtonClicked">
            <font>
                <Font name="Verdana Bold" size="13" ></Font>
            </font>
        </Button>
    </HBox>

</VBox>
